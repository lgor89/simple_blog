<div class="container">
  <div class="row">
    <div class="heading text-center">
      <!-- Heading -->
      <h2><%= t('contactUs.title')%></h2>
      <p><%= t('contactUs.description')%></p>
    </div>
  </div>
  <div class="row mrgn30">
    <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
        <%= f.error_notification %>
        <div class="col-md-offset-3 col-md-8 col-sm-12">
          <%= f.input :name,    label: t('forms.fields.fullname').to_sym, required: true %>
          <%= f.input :email,   label: t('forms.fields.email').to_sym,    required: true %>
          <%= f.input :message, label: t('forms.fields.message').to_sym,  required: true,
                      as: :text, input_html: {rows: 10, cols: 100, minlength: 1, maxlength: 999, style: 'resize: none'} %>
          <div style="display:none;">
            <%= f.input :nickname, hint: 'Leave this field blank!' %>
          </div>
        </div>
        <div class='form-actions'>
          <%= f.button :submit, t('forms.buttons.submit'), class: 'btn btn-success pull-right' %>
          <%= f.button :button, t('forms.buttons.reset'),  class: 'btn btn-default pull-right', type: 'reset' %>
        </div>
    <% end %>
  </div>
</div>